      .why-different .value-points {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 0.6rem 0.9rem;
        margin: 1rem 0 1.25rem;
        padding: 0; list-style: none;
      }
      .why-different .value-points li { position: relative; padding-left: 1.25rem; color: var(--text-secondary); }
      .why-different .value-points li::before {
        content: "";
        position: absolute;
        left: 0; top: 0.6em;
        width: 8px; height: 8px;
        border-radius: 50%;
        background: var(--accent);
        box-shadow: 0 0 0 2px rgba(52, 211, 153, 0.18);
      }

      body[data-page="codeneuron"] .flow-stepper {
        display: flex; flex-wrap: wrap;
        gap: 0.5rem 0.75rem;
        align-items: center;
        counter-reset: step;
        list-style: none; padding: 0; margin: 0.25rem 0 0;
      }
