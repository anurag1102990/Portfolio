---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout
  title="CodeNeuron â€” Early Access | Anurag Jain"
  description="Practice ML handsâ€‘on with guided, structured problem sets in a browser IDE. Learn by doing with immediate feedback, plots, and concise theory when you need it."
  ogTitle="CodeNeuron â€” Early Access"
  ogDescription="An experimental ML/AI practice platform: IDE + sandbox runner + problem catalog."
  ogUrl="https://jainanurag.me/projects/codeneuron"
  bodyDataPage="codeneuron"
>
  <Fragment slot="head">
    <style>
      /* â”€â”€ Page base â”€â”€ */
      body[data-page="codeneuron"] {
        background: #05070f;
        color: var(--text-primary);
      }

      /* â”€â”€ Back link â”€â”€ */
      .cn-back {
        position: fixed;
        top: 18px; left: 18px;
        z-index: 1000;
        padding: 0.44rem 0.9rem;
        border-radius: 999px;
        text-decoration: none;
        background: rgba(8, 12, 24, 0.72);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(96,165,250,0.22);
        color: var(--text-secondary);
        font-size: 0.84rem;
        transition: border-color 0.18s, color 0.18s, transform 0.18s;
      }
      .cn-back:hover { border-color: rgba(56,189,248,0.5); color: var(--text-primary); transform: translateX(-2px); }

      /* â”€â”€ Shared wrapper â”€â”€ */
      .cn-wrap {
        width: min(1200px, 100%);
        margin: 0 auto;
        padding-left: clamp(1.5rem, 5vw, 2.5rem);
        padding-right: clamp(1.5rem, 5vw, 2.5rem);
      }

      /* â”€â”€ Divider â”€â”€ */
      .cn-divider {
        width: min(1200px, 100%);
        margin: 0 auto;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(96,165,250,0.15), transparent);
      }

      /* â•â•â•â•â•â•â•â•â•â• HERO â•â•â•â•â•â•â•â•â•â• */
      .cn-hero {
        padding: clamp(7rem, 14vw, 10rem) clamp(1.5rem, 5vw, 2.5rem) clamp(4rem, 8vw, 6rem);
        text-align: center;
        position: relative;
      }
      .cn-hero::before {
        content: "";
        position: absolute;
        inset: 0;
        background:
          radial-gradient(ellipse 80% 55% at 50% 0%, rgba(56,189,248,0.09), transparent 65%);
        pointer-events: none;
      }

      .cn-hero-badge {
        display: inline-block;
        font-size: 0.68rem;
        font-weight: 700;
        letter-spacing: 0.13em;
        text-transform: uppercase;
        color: #38bdf8;
        border: 1px solid rgba(56,189,248,0.3);
        padding: 0.28rem 0.85rem;
        border-radius: 999px;
        margin-bottom: 1.6rem;
      }

      .cn-hero-title {
        font-size: clamp(3rem, 7vw, 5.2rem);
        font-weight: 800;
        letter-spacing: -0.03em;
        line-height: 1.05;
        margin: 0 auto 1.4rem;
        background: linear-gradient(135deg, #f0f9ff 30%, #7dd3fc 70%, #38bdf8 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .cn-hero-sub {
        font-size: clamp(1.05rem, 2vw, 1.25rem);
        color: var(--text-secondary);
        line-height: 1.7;
        max-width: 52ch;
        margin: 0 auto 2.4rem;
      }

      .cn-hero-cta {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 2rem;
        border-radius: 999px;
        font-size: 1rem;
        font-weight: 600;
        background: linear-gradient(135deg, #38bdf8, #60a5fa);
        color: #05070f;
        text-decoration: none;
        transition: opacity 0.2s, transform 0.2s;
        box-shadow: 0 0 32px rgba(56,189,248,0.25);
      }
      .cn-hero-cta:hover { opacity: 0.88; transform: translateY(-2px); }
      .cn-hero-cta-ghost {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.75rem 1.6rem;
        border-radius: 999px;
        font-size: 1rem;
        font-weight: 500;
        color: var(--text-secondary);
        text-decoration: none;
        border: 1px solid rgba(255,255,255,0.1);
        transition: border-color 0.2s, color 0.2s;
      }
      .cn-hero-cta-ghost:hover { border-color: rgba(56,189,248,0.4); color: var(--text-primary); }
      .cn-hero-actions { display: flex; align-items: center; justify-content: center; gap: 0.75rem; flex-wrap: wrap; }

      /* â•â•â•â•â•â•â•â•â•â• STATS â•â•â•â•â•â•â•â•â•â• */
      .cn-stats {
        padding: clamp(3rem, 6vw, 4.5rem) clamp(1.5rem, 5vw, 2.5rem);
      }
      .cn-stats-grid {
        width: min(820px, 100%);
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0;
      }
      .cn-stat {
        padding: 1.5rem 1rem;
        text-align: center;
        position: relative;
      }
      .cn-stat:not(:last-child)::after {
        content: "";
        position: absolute;
        right: 0; top: 20%; bottom: 20%;
        width: 1px;
        background: rgba(255,255,255,0.08);
      }
      .cn-stat-num {
        display: block;
        font-size: clamp(2.4rem, 5vw, 3.6rem);
        font-weight: 800;
        letter-spacing: -0.03em;
        background: linear-gradient(135deg, #f0f9ff, #38bdf8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
        margin-bottom: 0.4rem;
      }
      .cn-stat-label {
        font-size: 0.82rem;
        color: var(--text-secondary);
        letter-spacing: 0.04em;
      }

      /* â•â•â•â•â•â•â•â•â•â• PROBLEM â•â•â•â•â•â•â•â•â•â• */
      .cn-problem {
        padding: clamp(3rem, 6vw, 5rem) clamp(1.5rem, 5vw, 2.5rem);
      }
      .cn-problem-inner {
        width: min(820px, 100%);
        margin: 0 auto;
      }
      .cn-label {
        display: block;
        font-size: 0.68rem;
        font-weight: 700;
        letter-spacing: 0.14em;
        text-transform: uppercase;
        color: #38bdf8;
        margin-bottom: 1.2rem;
      }
      .cn-problem-text {
        font-size: clamp(1.25rem, 2.5vw, 1.65rem);
        line-height: 1.55;
        color: var(--text-primary);
        font-weight: 500;
        max-width: 64ch;
      }
      .cn-problem-text em {
        font-style: normal;
        color: #7dd3fc;
      }

      /* â•â•â•â•â•â•â•â•â•â• FEATURES â•â•â•â•â•â•â•â•â•â• */
      .cn-features {
        padding: clamp(3rem, 6vw, 5rem) clamp(1.5rem, 5vw, 2.5rem);
      }
      .cn-features-inner { width: min(820px, 100%); margin: 0 auto; }
      .cn-features-header { margin-bottom: 2.5rem; }
      .cn-features-title {
        font-size: clamp(1.5rem, 3vw, 2rem);
        font-weight: 700;
        margin: 0.4rem 0 0.75rem;
      }
      .cn-features-desc {
        color: var(--text-secondary);
        font-size: 1rem;
        line-height: 1.6;
        max-width: 52ch;
      }
      .cn-features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1px;
        background: rgba(255,255,255,0.06);
        border: 1px solid rgba(255,255,255,0.06);
        border-radius: 16px;
        overflow: hidden;
      }
      .cn-feature {
        padding: 1.8rem 2rem;
        background: #05070f;
        transition: background 0.2s;
      }
      .cn-feature:hover { background: rgba(56,189,248,0.04); }
      .cn-feature-icon {
        width: 36px; height: 36px;
        border-radius: 8px;
        background: rgba(56,189,248,0.1);
        border: 1px solid rgba(56,189,248,0.2);
        display: grid; place-items: center;
        font-size: 1rem;
        margin-bottom: 1rem;
      }
      .cn-feature h3 {
        font-size: 1rem;
        font-weight: 650;
        color: var(--text-primary);
        margin: 0 0 0.45rem;
      }
      .cn-feature p {
        font-size: 0.9rem;
        color: var(--text-secondary);
        line-height: 1.6;
        margin: 0;
      }

      /* â•â•â•â•â•â•â•â•â•â• WORKFLOW â•â•â•â•â•â•â•â•â•â• */
      .cn-workflow {
        padding: clamp(3rem, 6vw, 5rem) clamp(1.5rem, 5vw, 2.5rem);
      }
      .cn-workflow-inner { width: min(820px, 100%); margin: 0 auto; }
      .cn-steps {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1px;
        background: rgba(255,255,255,0.06);
        border: 1px solid rgba(255,255,255,0.06);
        border-radius: 16px;
        overflow: hidden;
        margin-top: 2rem;
      }
      .cn-step {
        padding: 1.6rem 1.4rem;
        background: #05070f;
        position: relative;
      }
      .cn-step-num {
        font-size: 0.68rem;
        font-weight: 700;
        letter-spacing: 0.1em;
        color: #38bdf8;
        margin-bottom: 0.6rem;
      }
      .cn-step h4 {
        font-size: 0.95rem;
        font-weight: 650;
        color: var(--text-primary);
        margin: 0 0 0.35rem;
      }
      .cn-step p { font-size: 0.82rem; color: var(--text-secondary); line-height: 1.5; margin: 0; }

      /* â•â•â•â•â•â•â•â•â•â• SHIPPED â•â•â•â•â•â•â•â•â•â• */
      .cn-shipped {
        padding: clamp(3rem, 6vw, 5rem) clamp(1.5rem, 5vw, 2.5rem);
      }
      .cn-shipped-inner { width: min(820px, 100%); margin: 0 auto; }
      .cn-shipped-list {
        list-style: none;
        padding: 0; margin: 2rem 0 0;
        display: grid;
        gap: 0;
        border: 1px solid rgba(255,255,255,0.06);
        border-radius: 16px;
        overflow: hidden;
      }
      .cn-shipped-list li {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        padding: 1.25rem 1.6rem;
        background: #05070f;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.6;
        transition: background 0.18s;
      }
      .cn-shipped-list li:last-child { border-bottom: none; }
      .cn-shipped-list li:hover { background: rgba(56,189,248,0.03); }
      .cn-shipped-list li::before {
        content: "âœ“";
        color: #38bdf8;
        font-weight: 700;
        font-size: 0.9rem;
        flex-shrink: 0;
        margin-top: 0.1rem;
      }

      /* â•â•â•â•â•â•â•â•â•â• STACK â•â•â•â•â•â•â•â•â•â• */
      .cn-stack-section {
        padding: clamp(3rem, 6vw, 5rem) clamp(1.5rem, 5vw, 2.5rem);
      }
      .cn-stack-inner { width: min(820px, 100%); margin: 0 auto; }
      .cn-stack-pills {
        display: flex;
        flex-wrap: wrap;
        gap: 0.6rem;
        margin-top: 1.6rem;
      }
      .cn-pill {
        padding: 0.4rem 1rem;
        border-radius: 999px;
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--text-secondary);
        border: 1px solid rgba(255,255,255,0.1);
        background: rgba(255,255,255,0.03);
        transition: border-color 0.18s, color 0.18s;
      }
      .cn-pill:hover { border-color: rgba(56,189,248,0.35); color: var(--text-primary); }

      /* â•â•â•â•â•â•â•â•â•â• ROADMAP â•â•â•â•â•â•â•â•â•â• */
      .cn-roadmap {
        padding: clamp(3rem, 6vw, 5rem) clamp(1.5rem, 5vw, 2.5rem);
      }
      .cn-roadmap-inner { width: min(820px, 100%); margin: 0 auto; }
      .cn-roadmap-list {
        list-style: none;
        padding: 0; margin: 2rem 0 0;
        display: grid;
        gap: 0.5rem;
      }
      .cn-roadmap-list li {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        padding: 1rem 0;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.55;
      }
      .cn-roadmap-list li:last-child { border-bottom: none; }
      .cn-roadmap-dot {
        width: 8px; height: 8px;
        border-radius: 50%;
        background: #38bdf8;
        box-shadow: 0 0 0 3px rgba(56,189,248,0.15);
        flex-shrink: 0;
        margin-top: 0.42rem;
      }

      /* â•â•â•â•â•â•â•â•â•â• BOTTOM CTA â•â•â•â•â•â•â•â•â•â• */
      .cn-cta-section {
        padding: clamp(4rem, 8vw, 7rem) clamp(1.5rem, 5vw, 2.5rem);
        text-align: center;
        position: relative;
      }
      .cn-cta-section::before {
        content: "";
        position: absolute;
        inset: 0;
        background: radial-gradient(ellipse 70% 60% at 50% 50%, rgba(56,189,248,0.07), transparent 70%);
        pointer-events: none;
      }
      .cn-cta-inner { position: relative; width: min(580px, 100%); margin: 0 auto; }
      .cn-cta-title {
        font-size: clamp(1.8rem, 4vw, 2.6rem);
        font-weight: 750;
        letter-spacing: -0.02em;
        line-height: 1.15;
        margin: 0.5rem 0 1rem;
      }
      .cn-cta-sub {
        color: var(--text-secondary);
        font-size: 1rem;
        line-height: 1.65;
        margin-bottom: 2rem;
      }
      .cn-cta-links {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.6rem;
        flex-wrap: wrap;
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin-top: 1.4rem;
      }
      .cn-cta-link { color: #7dd3fc; text-decoration: none; transition: color 0.15s; }
      .cn-cta-link:hover { color: #38bdf8; }

      /* â•â•â•â•â•â•â•â•â•â• FOOTER â•â•â•â•â•â•â•â•â•â• */
      .cn-footer {
        padding: 1.8rem 2rem;
        text-align: center;
        font-size: 0.82rem;
        color: var(--text-secondary);
        border-top: 1px solid rgba(255,255,255,0.06);
      }

      /* â•â•â•â•â•â•â•â•â•â• SCROLL REVEAL â•â•â•â•â•â•â•â•â•â• */
      .cn-reveal {
        opacity: 0;
        transform: translateY(22px);
        transition: opacity 0.55s ease, transform 0.55s ease;
      }
      .cn-reveal.visible {
        opacity: 1;
        transform: none;
      }

      /* â•â•â•â•â•â•â•â•â•â• RESPONSIVE â•â•â•â•â•â•â•â•â•â• */
      @media (max-width: 640px) {
        .cn-steps { grid-template-columns: repeat(2, 1fr); }
        .cn-stats-grid { grid-template-columns: repeat(3, 1fr); }
        .cn-stat-num { font-size: 2rem; }
      }
      @media (max-width: 420px) {
        .cn-stats-grid { grid-template-columns: 1fr; }
        .cn-stat:not(:last-child)::after { display: none; }
        .cn-steps { grid-template-columns: 1fr; }
      }
    </style>
  </Fragment>

  <!-- Back -->
  <a class="cn-back" href="/#featured">â† Back</a>

