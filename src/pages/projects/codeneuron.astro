      body[data-page="codeneuron"] .timeline li { position: relative; padding-left: 1.2rem; margin: 0.65rem 0; color: var(--text-secondary); }
      body[data-page="codeneuron"] .timeline li::before { content: ""; position: absolute; left: -0.95rem; top: 0.4rem; width: 10px; height: 10px; border-radius: 50%; background: var(--accent); box-shadow: 0 0 0 3px rgba(56, 189, 248, 0.2); }

      body[data-page="codeneuron"] .cn-contact-list { list-style: none; padding-left: 0; margin: 0; color: var(--text-secondary); display: grid; gap: 0.55rem; }
      body[data-page="codeneuron"] .cn-contact-link { color: var(--accent-secondary); font-weight: 600; }
      body[data-page="codeneuron"] .cn-contact-link:hover { color: var(--accent); }

      body[data-page="codeneuron"] .cn-footer { padding: 2.2rem 0 2.8rem; text-align: center; color: var(--text-secondary); }
      body[data-page="codeneuron"] .cn-footer__inner { width: min(960px, 100%); margin: 0 auto; padding: 1.2rem 1.5rem 0; border-top: 1px solid rgba(96, 165, 250, 0.2); }

      body[data-page="codeneuron"] .cn-stack { margin: 0.25rem 0 0.9rem; padding-left: 1.1rem; display: grid; grid-template-columns: repeat(auto-fit, minmax(160px, 1fr)); gap: 0.35rem 1rem; list-style: disc; }
      body[data-page="codeneuron"] .cn-stack li { color: var(--text-secondary); line-height: 1.5; }
      body[data-page="codeneuron"] .cn-stack li::marker { color: var(--accent); }

      @media (max-width: 900px) { body[data-page="codeneuron"] main > section { padding: clamp(1.6rem, 6vw, 2.2rem); } }
      @media (max-width: 720px) {
        body[data-page="codeneuron"] main { padding: clamp(2.2rem, 7vw, 2.8rem) 1.1rem 3.4rem; }
        body[data-page="codeneuron"] main > section { padding: clamp(1.4rem, 5vw, 2rem); border-radius: 20px; }
        body[data-page="codeneuron"] .cn-hero { min-height: 56vh; }
        body[data-page="codeneuron"] .cn-hero__inner { padding: clamp(2.2rem, 8vw, 2.8rem) clamp(1.2rem, 6vw, 2rem); }
      }

      #cnHeroTyping.is-typing::after {
        content: "‚ñç";
        margin-left: 2px;
        opacity: 0.85;
        animation: cnBlink 1s steps(1) infinite;
      }
      @keyframes cnBlink { 50% { opacity: 0; } }
    </style>
