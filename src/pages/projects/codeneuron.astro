  <script>
    (function () {
      if (document.body.getAttribute('data-page') !== 'codeneuron') return;

      // Scroll reveal
      const reveals = document.querySelectorAll('.cn-reveal');
      const io = new IntersectionObserver((entries) => {
        entries.forEach(e => { if (e.isIntersecting) { e.target.classList.add('visible'); io.unobserve(e.target); } });
      }, { threshold: 0.12 });
      reveals.forEach(el => io.observe(el));

      // Stat counter
      const stats = document.querySelectorAll('[data-count]');
      const sio = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (!entry.isIntersecting) return;
          const el = entry.target;
          const target = Number(el.getAttribute('data-count')) || 0;
          const hasPlus = /\+/.test(el.textContent);
          const start = performance.now();
          const duration = 900;
          (function tick(now) {
            const t = Math.min(1, (now - start) / duration);
            const ease = 1 - Math.pow(1 - t, 3);
            el.textContent = hasPlus ? `${Math.floor(target * ease)}+` : String(Math.floor(target * ease));
            if (t < 1) requestAnimationFrame(tick);
          })(start);
          sio.unobserve(el);
        });
      }, { threshold: 0.5 });
      stats.forEach(el => sio.observe(el));
    })();
  </script>
