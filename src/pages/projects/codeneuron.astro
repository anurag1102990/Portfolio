  <script>
    (function () {
      if (document.body.getAttribute('data-page') !== 'codeneuron') return;
      const items = Array.from(document.querySelectorAll('.cn-stats [data-count]'));
      if (!items.length || !('IntersectionObserver' in window)) return;
      const io = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (!entry.isIntersecting) return;
          const el = entry.target;
          const target = Number(el.getAttribute('data-count')) || 0;
          const hasPlus = /\+$/.test(el.textContent);
          const duration = 800;
          const start = performance.now();
          function tick(now) {
            const t = Math.min(1, (now - start) / duration);
            const val = Math.floor(target * t);
            el.textContent = hasPlus ? `${val}+` : String(val);
            if (t < 1) requestAnimationFrame(tick);
          }
          requestAnimationFrame(tick);
          io.unobserve(el);
        });
      }, { threshold: 0.4 });
      items.forEach((el) => io.observe(el));
    })();
  </script>
