      body[data-page="codeneuron"] ul { padding-left: 1.1rem; margin: 0.35rem 0 0.85rem; }
      body[data-page="codeneuron"] li { margin: 0.4rem 0; line-height: 1.55; }
      body[data-page="codeneuron"] .cn-intro-note { font-style: italic; color: var(--text-secondary); margin-bottom: 1.1rem; }

